<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Sunset</item>
        <item name="colorPrimaryVariant">@color/Mountbatten_pink</item>
        <item name="colorOnPrimary">@color/English_Violet</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Apricot</item>
        <item name="colorSecondaryVariant">@color/English_Violet_Darken</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
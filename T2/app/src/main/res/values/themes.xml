<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/English_Violet</item>
        <item name="colorPrimaryVariant">@color/Mountbatten_pink</item>
        <item name="colorOnPrimary">@color/Sunset</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/English_Violet_Darken</item>
        <item name="colorSecondaryVariant">@color/Apricot</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="numButton">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/Sunset</item>
        <item name="android:backgroundTint">@color/English_Violet_Darken</item>
        <item name="android:background">@drawable/circle_button</item>
    </style>

    <style name="operationButton">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:backgroundTint">@color/Sunset</item>
    </style>


    <style name="longButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/Mountbatten_pink</item>
        <item name="android:background">@drawable/long_button</item>
    </style>

</resources>